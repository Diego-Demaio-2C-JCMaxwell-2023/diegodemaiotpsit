<!DOCTYPE html>
<html>

<head>
  <title>Numbers List</title>
  <script>
    function printNumbers() {
      var number = parseInt(document.getElementById("inputNumber").value);
      var output = "";

      for (var i = 1; i <= number; i++) {
        output += i + "<br>";
      }


      var tenPercent = number * 0.1;


      output += "<br>il 10% del numero inserito corrisponde a: " + tenPercent;

      document.getElementById("result").innerHTML = output;
    }
  </script>
</head>

<body>
  <label for="inputNumber">Inserisci un numero:</label>
  <input type="number" id="inputNumber">
  <button onclick="printNumbers()">stampa numeri</button>

  <div id="result"></div>
</body>

</html>
